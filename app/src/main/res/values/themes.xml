<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecureIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/purple_500</item>  <!-- active thumb &track color  -->
        <item name="colorSwitchThumbNormal">@color/colorDivider</item> <!-- inactive thumb color -->
        <item name="android:colorForeground">@color/colorDivider</item><!-- inactive track color -->
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/purple_500</item>
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>